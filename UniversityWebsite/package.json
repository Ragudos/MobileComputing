{
  "name": "university-website",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "format": "prettier --write **/src/**",
    "dev": "concurrently \"pnpm --filter ./packages/client run dev\" \"pnpm --filter ./packages/server run dev\" \"pnpm --filter ./packages/shared run dev\"",
    "build": "pnpm -r --filter ./packages/* run build",
    "lint": "pnpm -r --filter ./packages/* run lint",
    "typecheck": "pnpm -r --filter ./packages/* run typecheck",
    "precommit": "pnpm -r --filter ./packages/* run precommit"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "framer-motion": "^12.23.12",
    "motion": "^12.23.12",
    "motion-utils": "^12.23.6",
    "react-icons": "^5.5.0"
  }
}