{
  "name": "university-website",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write **/src/**",
    "dev": "concurrently \"pnpm --filter ./packages/client run dev\" \"pnpm --filter ./packages/server run dev\" \"pnpm --filter ./packages/shared run dev\"",
    "build": "pnpm -r --filter ./packages/* run build",
    "lint": "pnpm -r --filter ./packages/* run lint",
    "typecheck": "pnpm -r --filter ./packages/* run typecheck",
    "precommit": "pnpm -r --filter ./packages/* run precommit",
    "start": "pnpm --filter ./packages/server run start"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.11.0",
  "devDependencies": {
    "@flydotio/dockerfile": "^0.7.10",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.1.1",
    "pnpm": "^10.11.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}